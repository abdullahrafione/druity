@model OnlineShop.Models.User

@{
                /**/

                string error = (string)TempData["Error"];
}

<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Account<span>Details</span></h1>
        </div>
    </div>
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Account</a></li>
                <li class="breadcrumb-item active"><a href="#">Details</a></li>
            </ol>
        </div>
    </nav>

    <div class="page-content">
        <div class="dashboard">
            <div class="container">
                <div class="row">
                    @Html.Partial("_UserSideMenu")
                    <div class="col-md-10">
                        @if (!string.IsNullOrEmpty(error))
                        {
                            @Html.Partial("~/Views/Shared/_ErrorTempData.cshtml", error);
                        }
                        <div class="tab-pane fade active show" id="tab-account" role="tabpanel" aria-labelledby="tab-account-link">
                            <form action="~/account/updateuserinfo" method="post">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>First Name *</label>
                                        @*<input type="text" class="form-control" name="FirstName" required="">*@
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label>Last Name *</label>
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->

                                <label>Email address *</label>
                                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @readonly = true })

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Phone *</label>
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label>Country *</label>
                                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Street *</label>
                                        @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label>Postal Code *</label>
                                        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->

                                <label>Address *</label>
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>City *</label>
                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label>State *</label>
                                        @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->

                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>SAVE CHANGES</span>
                                    <i class="icon-long-arrow-right"></i>
                                </button>
                            </form>
                        </div><!-- .End .tab-pane -->

                    </div>
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .dashboard -->
    </div><!-- End .page-content -->

</main>
