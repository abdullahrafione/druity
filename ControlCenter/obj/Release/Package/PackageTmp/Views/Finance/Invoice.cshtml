@model ControlCenter.Models.InvoiceModel
@{
    ViewBag.Title = "Invoice";
    int counter = 1;
}
<div class="main-content-wrap d-flex flex-column">
    <div class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade active show" id="invoice" role="tabpanel" aria-labelledby="invoice-tab">
                            <div class="d-sm-flex mb-5" data-view="print">
                                <span class="m-auto"></span>
                                <button onclick="window.print()" class="btn btn-primary mb-sm-0 mb-3 print-invoice">Print Invoice</button>
                            </div>
                            <!-- -===== Print Area =======-->
                            <div id="print-area">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4 class="font-weight-bold">Invoice No.</h4>
                                        <p>@Model.InvoiceId</p>
                                    </div>
                                    <div class="col-md-6 text-sm-right">
                                        <p><strong>Payment mode: </strong>@Model.PaymentMode</p>
                                        <p><strong>Order date: </strong>@Model.CreationTime</p>
                                    </div>
                                </div>
                                <div class="mt-3 mb-4 border-top"></div>
                                <div class="row mb-5">
                                    <div class="col-md-6 mb-3 mb-sm-0">
                                        <h5 class="font-weight-bold">Bill From</h5>
                                        <p>Druity.com</p><span style="white-space: pre-line">
                                            support@druity.com www.druity.com (042) 32295953
                                        </span>
                                    </div>
                                    <div class="col-md-6 text-sm-right">
                                        <h5 class="font-weight-bold">Bill To</h5>
                                        <p>@Model.FirstName  @Model.LastName</p><span style="white-space: pre-line">
                                            @Model.Address, @Model.City | @Model.PhoneNumber
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 table-responsive">
                                        <table class="table table-hover mb-4">
                                            <thead class="bg-gray-300">
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">Product Name</th>
                                                    <th scope="col">Unit Price</th>
                                                    <th scope="col">Qty</th>
                                                    <th scope="col">Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Products)
                                                {
                                                    var num = counter++;
                                                    <tr>
                                                        <td>@num</td>
                                                        <td>@item.Name</td>
                                                        <td>@item.CurrentPrice.ToString("##,##0")</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@item.Amount.ToString("##,##0")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="invoice-summary">
                                            <p>Sub total: <span>Rs. @Model.OrderTotal.ToString("##,##0")</span></p>
                                            <p>Shipping Fee: <span>Rs. @Model.ShippingFee.ToString("##,##0")</span></p>
                                            <h5 class="font-weight-bold">Grand Total: <span>Rs. @Model.GrandTotal.ToString("##,##0")</span></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ==== / Print Area =====-->
                        </div>
                        <div class="tab-pane fade" id="edit" role="tabpanel" aria-labelledby="edit-tab">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
