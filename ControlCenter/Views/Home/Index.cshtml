@model ControlCenter.Models.DashboardModel

@using ControlCenter.Utilities
@{ var username = ControlCenter.Utilities.CookiesUtility.GetLoggedInUserName(this.Context); }

@{
    ViewBag.Title = "Home Page";
}

<div class="main-content-wrap sidenav-open d-flex flex-column">
    <div class="main-content">
        <div>
            <div class="breadcrumb"><h1>Welcome @username</h1></div>
            <div class="separator-breadcrumb border-top"></div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-30 text-center">
                    <div class="card-body">
                        <i class="i-Add-User"></i>
                        <div class="content">
                            <p class="text-muted mt-2 mb-0">Orders</p>
                            <p class="text-primary text-24 line-height-1 mb-2">@Model.OrdersCount</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-30 text-center">
                    <div class="card-body">
                        <i class="i-Financial"></i>
                        <div class="content">
                            <p class="text-muted mt-2 mb-0">Users</p>
                            <p class="text-primary text-24 line-height-1 mb-2">@Model.UsersCount</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-30 text-center">
                    <div class="card-body">
                        <i class="i-Checkout-Basket"></i>
                        <div class="content">
                            <p class="text-muted mt-2 mb-0">Products</p>
                            <p class="text-primary text-24 line-height-1 mb-2">@Model.ProductsCount</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-30 text-center">
                    <div class="card-body">
                        <i class="i-Money-2"></i>
                        <div class="content">
                            <p class="text-muted mt-2 mb-0">Active Orders</p>
                            <p class="text-primary text-24 line-height-1 mb-2">@Model.ActiveOrdersCount</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-6">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4">
                        <div class="card card-icon text-center mb-30">
                            <div class="card-body">
                                <i class="i-Data-Upload"></i>
                                <p class="text-muted mt-2 mb-2">Out of Stock</p>
                                <p class="text-primary text-24 line-height-1 m-0">@Model.outOfStock</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4">
                        <div class="card card-icon text-center mb-30">
                            <div class="card-body">

                                <i class="i-Add-User"></i>
                                <p class="text-muted mt-2 mb-2">In Progress</p>
                                <p class="text-primary text-24 line-height-1 m-0">EXP</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4">
                        <div class="card card-icon text-center mb-30">
                            <div class="card-body">
                                <i class="i-Money-2"></i>
                                <p class="text-muted mt-2 mb-2">Total Delivered</p>
                                <p class="text-primary text-24 line-height-1 m-0">EXP</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>