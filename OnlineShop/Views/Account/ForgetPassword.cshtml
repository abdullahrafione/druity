@model OnlineShop.Models.User
@{
    string tab = (string)TempData["activetab"];
    string sigin = string.Empty;
    string register = string.Empty;
    bool signinAreaSelected = true;
    bool registerAreaSelected = false;

    var test = Html.AntiForgeryToken();

    if (tab == "signin")
    {
        sigin = "active";
        registerAreaSelected = false;
        signinAreaSelected = true;
    }
    else
    {
        registerAreaSelected = true;
        signinAreaSelected = false;
        register = "active";
    }
}
<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active" aria-current="page">Forget Password</li>
            </ol>
        </div>
    </nav>
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="register-tab-2" data-toggle="tab" href="#register-2" role="tab" aria-controls="register-2" aria-selected="true">Forget Password</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                            <form action="~/account/forgetpassword" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="register-email-2">Your email address *</label>
                                    <input type="email" class="form-control" name="EmailAddress">
                                    @Html.ValidationMessageFor(x => Model.EmailAddress, "", new { @style = "color:red" })
                                </div>
                               
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>Send Mail</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
