@using OnlineShop.Enums
@{
    string containerClass = string.Empty;
    string iconClass = string.Empty;

    // Read the message and type from TempData
    string messageError = (string)(TempData[StateConstants.TempDataErrorBlockMessageKey] ?? string.Empty);
}

<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Orders<span>History</span></h1>
        </div>
    </div>
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Order</a></li>
            </ol>
        </div>
    </nav>
    @Html.Partial("~/Views/Shared/_MessageBlock.cshtml")
    <div class="page-content">
        <div class="dashboard">
            <div class="container">
                <div class="row">
                    @Html.Partial("_UserSideMenu")
                    <div class="col-md-10">
                        <div id="orders">

                        </div>
                    </div>
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .dashboard -->
    </div><!-- End .page-content -->
</main>
<div class="modal"></div>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "Get",
            url: "/order/GetOrderHistory",
            success: function (data) {
                $('#orders').html(data);
            }
        })
    });


</script>
