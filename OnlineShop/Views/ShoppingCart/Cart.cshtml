<main class="main">
    <div class="page-header text-center" style="background-image: url('/Content/assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
        </div>
    </div>
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/home/index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
            </ol>
        </div>
    </nav>
    <div class="page-content">
        <div class="cart">
            <div class="container">
                <div id="shoppingcart">
                    @Html.Partial("~/Views/ShoppingCart/_GetItemsInCart.cshtml",new List<OnlineShop.Models.MiniCartModel>());
                </div>
            </div>
        </div>
    </div>
</main>

<script>
      $(document).ready(function () {
        $.ajax({
            type: "Get",
            url: "/shoppingcart/GetItemsInCart",
            success: function (data) {
                $('#shoppingcart').html(data);
            }
        })
      });

  
</script>