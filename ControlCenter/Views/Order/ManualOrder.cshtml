@model ControlCenter.Models.ManualOrderModel 
@{
    ViewBag.Title = "ManualOrder";
}

<div class="main-content-wrap sidenav-open d-flex flex-column">
    <div class="main-content">
        <div class="breadcrumb">
            <h1 class="mr-2">Add Manual Order</h1>
        </div>
        <div class="separator-breadcrumb border-top"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title mb-3">Manual Order</div>
                        <form action="~/order/ManualOrder" method="post">
                            <div class="row">
                                <div class="col-md-6 form-group mb-3">
                                    <label for="Product">Product</label>
                                    <select name="ProductId" class="form-control">
                                        @foreach (var item in Model.Products)
                                        {
                                            <option value=@item.productId> @item.Name </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="name">Quantity</label>
                                    <input type="number" name="Quantity" class="form-control">
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="name">First Name</label>
                                    <input type="text" name="FirstName" class="form-control">
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="name">Last Name</label>
                                    <input type="text" name="LastName" class="form-control">
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="name">City</label>
                                    <input type="text" name="City" class="form-control">
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="name">Address</label>
                                    <input type="text" name="Address" class="form-control">
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="name">Mobile Number</label>
                                    <input type="text" name="PhoneNo" class="form-control">
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
