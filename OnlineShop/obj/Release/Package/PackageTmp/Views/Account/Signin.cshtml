@model OnlineShop.Models.RegisterSignin
@{
    string tab = (string)TempData["activetab"];
    string sigin = string.Empty;
    string register = string.Empty;
    bool signinAreaSelected = true;
    bool registerAreaSelected = false;
    if (tab == "signin")
    {
        sigin = "active";
        registerAreaSelected = false;
        signinAreaSelected = true;
    }
    else
    {
        registerAreaSelected = true;
        signinAreaSelected = false;
        register = "active";
    }

    var alert = TempData["Validation"];
}
<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/home/index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Login</li>
            </ol>
        </div>
    </nav>
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/Content/assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="register-tab-2" data-toggle="tab" href="#register-2" role="tab" aria-controls="register-2" aria-selected="true">Login</a>
                            @if (alert != null)
                            {
                                <a style="color:red;">@alert</a>
                            }
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                            <h6>Don't have any account? <a href="@Url.Action("register","account")">Register your account</a></h6>
                            <form action="~/account/signin" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="register-email-2">Your email address *</label>
                                    <input type="email" class="form-control" name="EmailAddress">
                                    @Html.ValidationMessageFor(x => Model.EmailAddress, "", new { @style = "color:red" })
                                </div>
                                <div class="form-group">
                                    <label for="register-password-2">Password *</label>
                                    <input type="password" class="form-control" name="password">
                                    @Html.ValidationMessageFor(x => Model.Password, "", new { @style = "color:red" })
                                </div>
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>Login</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                    <a href="@Url.Action("ForgetPassword","Account")" class="forgot-link">Forgot Your Password?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
